<section>
    <h1>Работники:</h1>
</section>
<table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Должность</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Адрес</th>
        <th>Паспорт</th>
        <th>Логин</th>
        <th>Пароль</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    {{#each workers}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.name}}</td>
            <td>{{this.patronymic}}</td>
            <td>{{this.post}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.address}}</td>
            <td>{{this.passport}}</td>
            <td>{{this.login}}</td>
            <td>{{this.password}}</td>
            <td>
                <div class="actions">
                    <a class="edit" href="edit/{{this.id}}">
                        <img src="../images/edit.svg" alt="edit">
                    </a>
                    <a href="delete/{{this.id}}" class="edit">
                        <input type="image" src="../images/delete.svg" name="delete" alt="delete"/>
                    </a>
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
