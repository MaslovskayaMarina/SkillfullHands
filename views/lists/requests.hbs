<section>
    <h1>Заявки:</h1>
</section>
<table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>Дата поступления</th>
        <th>Дата выпуска</th>
        <th>Устройство</th>
        <th>Проблема</th>
        <th>Цена</th>
        <th>Статус</th>
        <th>Клиент</th>
        <th>Тип</th>
        <th>Работник</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    {{#each requests}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.date_admission}}</td>
            <td>{{this.date_issue}}</td>
            <td>{{device}}</td>
            <td>{{problem}}</td>
            <td>{{cost}}</td>
            <td>{{status_name}}</td>
            <td>{{client_name}}</td>
            <td>{{service_name}}</td>
            <td>{{worker_name}}</td>
            <td>
                <div class="actions">
                    <a class="edit" href="edit/{{this.id}}">
                        <img src="../images/edit.svg" alt="edit">
                    </a>
                    <a class="edit" href="/detail/{{this.id}}">
                        <img src="../images/detail.svg" alt="detail">
                    </a>
                    <a href="delete/{{this.id}}" class="edit">
                        <input type="image" src="../images/delete.svg" name="delete" alt="delete"/>
                    </a>
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
